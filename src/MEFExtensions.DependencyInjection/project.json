{
  "version": "1.0.0-*",
  "description": "Dependency Injection adapter to allow the use of MEF containers in .Net Core applications.",
  "packOptions": { 
    "repository": { 
      "type": "git", 
      "url": "git://github.com/OkraFramework/MEFExtensions.DependencyInjection" 
    }, 
    "tags": [ "DependencyInjection", "DI" ] 
   },
   
   "buildOptions": {
    "warningsAsErrors": true
  },

  "dependencies": {
    "NETStandard.Library": "1.6.0",
    "Microsoft.Extensions.DependencyInjection.Abstractions": "1.0.0",
    "Microsoft.Composition": "1.0.30"
  },

  "frameworks": {
    "netstandard1.4": {
      "imports": [ "dnxcore50", "net45" ]
    }
  }
}
